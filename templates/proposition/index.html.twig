{% extends 'base.html.twig' %}

{% block title %}Proposition index{% endblock %}

{% block body %}
    <h1>Proposition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Datetime</th>
                <th>Nbdispo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proposition in propositions %}
            <tr>
                <td>{{ proposition.id }}</td>
                <td>{{ proposition.titre }}</td>
                <td>{{ proposition.contenu }}</td>
                <td>{{ proposition.datetime ? proposition.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ proposition.nbdispo }}</td>
                <td>
                    <a href="{{ path('proposition_show', {'id': proposition.id}) }}">show</a>
                    <a href="{{ path('proposition_edit', {'id': proposition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('proposition_new') }}">Create new</a>
{% endblock %}