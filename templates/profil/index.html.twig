{% extends 'base.html.twig' %}

{% block title %}Profil index{% endblock %}

{% block body %}
    <h1>Profil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Saveurs</th>
                <th>Pratiquefood</th>
                <th>Prescriptionfood</th>
                <th>Typefood</th>
                <th>Recette</th>
                <th>Intolerance</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profil in profils %}
            <tr>
                <td>{{ profil.id }}</td>
                <td>{{ profil.saveurs }}</td>
                <td>{{ profil.pratiquefood }}</td>
                <td>{{ profil.prescriptionfood }}</td>
                <td>{{ profil.typefood }}</td>
                <td>{{ profil.recette }}</td>
                <td>{{ profil.intolerance }}</td>
                <td>{{ profil.score }}</td>
                <td>
                    <a href="{{ path('profil_show', {'id': profil.id}) }}">show</a>
                    <a href="{{ path('profil_edit', {'id': profil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profil_new') }}">Create new</a>
{% endblock %}