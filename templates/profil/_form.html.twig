{% block  stylesheets %}
<link rel="stylesheet" href="{{ asset('css/usercss/form.css') }}">
{% endblock %}


{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
        <div class="form-group col-md-6">
        {{ form_label(form.saveurs, 'Ta /ou tes saveur(s) préféré(s) (Possibilité de choix unique ou multiples) :') }}
        {{ form_widget(form.saveurs, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.saveurs) }}
        </div>
        
        <div class="form-group col-md-6">
        {{ form_label(form.pratiquefood, 'Ta /ou tes pratique(s) alimentaire(s) ?​ (Possibilité de choix unique ou multiples)') }}
        {{ form_widget(form.pratiquefood, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.pratiquefood) }}
        </div>

        <div class="form-group col-md-6">
        {{ form_label(form.prescriptionfood, 'Ta /ou tes prescription(s) alimentaire(s) ?​​ (Possibilité de choix unique ou multiples)') }}
        {{ form_widget(form.prescriptionfood, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.prescriptionfood) }}
        </div>

        <div class="form-group col-md-6">
        {{ form_label(form.typefood, 'Ton ou /tes type(s) de restauration(s) préférée(s)') }}
        {{ form_widget(form.typefood, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.typefood) }}
        </div>

        <div class="form-group col-md-6">
        {{ form_label(form.recette, 'Sélectionne un repas que tu aimes parmis cette liste') }}
        {{ form_widget(form.recette, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.recette) }}
        </div>

        <div class="form-group col-md-6">
        {{ form_label(form.intolerance, 'Ta /ou tes intolérance(s) alimentaire(s), si tu en as') }}
        {{ form_widget(form.intolerance, {'attr':{'class': 'form-controlcheck-input'}}) }}
        {{ form_errors(form.intolerance) }}
        </div>

        <button type="submit" class="btn btn">{{ button_label|default('Valide ton formulaire ici') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}

{% block  javascripts %}
<script src="{{ asset('js/form.js') }}"></script>
{% endblock %}