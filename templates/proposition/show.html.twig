{% block body %}
    <h1>Proposition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proposition.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ proposition.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
