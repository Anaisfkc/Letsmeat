{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block  stylesheets %}
<link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block main %}
<main>
{% block contenu %}
<br><br><br><div class="contenu">
<h2>Nous Contacter.</h2><br><br>
<form>
  <div class="form-group">
    <label for="FormControlInput1" id="mail">Adresse Email</label>
    <input type="email" class="form-control" id="FormControlInput1" aria-describedby="emailHelp">
    <small id="emailHelp" class="form-text vert">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Votre Message</label>
    <textarea class="form-control" id="textarea1" rows="16" cols="25"></textarea>
  </div>
  <button type="submit" class="btn btn-success">Valider</button>
  <br><br>
</form>
</div>
{% endblock %}
</main>
{% endblock %}
